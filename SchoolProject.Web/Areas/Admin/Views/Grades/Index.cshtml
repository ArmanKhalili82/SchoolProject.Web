@using SchoolProject.Utilities;
@model PagedResult<SchoolProject.ViewModels.GradeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddGrade">Create New</a>
</p>
