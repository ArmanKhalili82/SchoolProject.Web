    <thead>
    <th>
        Id
    </th>
    <th>
        Name
    </th>
    <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
